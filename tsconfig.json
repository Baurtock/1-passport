{
  "noEmit": true,
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "*.ts": ["*"]
    }
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "plugins": [
    {
      "name": "@typescript-eslint"
    }
  ]
}